# ============================================================================
# CW-AGENTS CONFIGURATION
# ============================================================================

# ----------------------------------------------------------------------------
# Redis Configuration (Message Queue & State Management)
# ----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# ----------------------------------------------------------------------------
# MCP Server Configuration
# ----------------------------------------------------------------------------
MCP_SERVER_URL=https://cw-mcp.onrender.com
MCP_CONNECTION_POOL_SIZE=5
MCP_TIMEOUT=30
MCP_RETRY_ATTEMPTS=3
MCP_RETRY_DELAY=1
MCP_HEALTH_CHECK_INTERVAL=60

# ----------------------------------------------------------------------------
# Agent Configuration
# ----------------------------------------------------------------------------
AGENT_WORKER_COUNT=10
AGENT_QUEUE_SIZE=100
AGENT_TASK_TIMEOUT=60
AGENT_HEARTBEAT_INTERVAL=10
AGENT_SHUTDOWN_GRACE_PERIOD=30

# ----------------------------------------------------------------------------
# Tracking Agent Configuration
# ----------------------------------------------------------------------------
TRACKING_AGENT_ENABLED=true
TRACKING_AGENT_INSTANCES=2
TRACKING_AGENT_POLLING_INTERVAL=300
TRACKING_AGENT_BATCH_SIZE=50

# ----------------------------------------------------------------------------
# Routing Agent Configuration
# ----------------------------------------------------------------------------
ROUTING_AGENT_ENABLED=false
ROUTING_AGENT_INSTANCES=1

# ----------------------------------------------------------------------------
# Exception Agent Configuration
# ----------------------------------------------------------------------------
EXCEPTION_AGENT_ENABLED=false
EXCEPTION_AGENT_INSTANCES=1
EXCEPTION_AGENT_DELAY_THRESHOLD=24

# ----------------------------------------------------------------------------
# Documentation Agent Configuration
# ----------------------------------------------------------------------------
DOCUMENTATION_AGENT_ENABLED=false
DOCUMENTATION_AGENT_INSTANCES=1

# ----------------------------------------------------------------------------
# Analytics Agent Configuration
# ----------------------------------------------------------------------------
ANALYTICS_AGENT_ENABLED=false
ANALYTICS_AGENT_INSTANCES=1

# ----------------------------------------------------------------------------
# Circuit Breaker Configuration
# ----------------------------------------------------------------------------
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
CIRCUIT_BREAKER_TIMEOUT=60
CIRCUIT_BREAKER_HALF_OPEN_TIMEOUT=30

# ----------------------------------------------------------------------------
# Monitoring & Health Checks
# ----------------------------------------------------------------------------
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9000

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/cw-agents.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ----------------------------------------------------------------------------
# CW-Brain Integration
# ----------------------------------------------------------------------------
BRAIN_ENABLED=true
BRAIN_URL=http://localhost:8100
BRAIN_API_KEY=dev-brain-key-12345

# ----------------------------------------------------------------------------
# Development & Testing
# ----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=false
TESTING=false

# ----------------------------------------------------------------------------
# Performance Tuning
# ----------------------------------------------------------------------------
MAX_CONCURRENT_TASKS=100
TASK_QUEUE_STRATEGY=priority
ENABLE_TASK_BATCHING=true
BATCH_SIZE=10
BATCH_TIMEOUT=5
